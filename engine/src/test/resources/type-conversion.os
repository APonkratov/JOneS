Перем юТест;

Функция ПолучитьСписокТестов(ЮнитТестирование) Экспорт
	
	юТест = ЮнитТестирование;
	
	ВсеТесты = Новый Массив;
	
	ВсеТесты.Добавить("ТестДолжен_ПроверитьБулево");
	ВсеТесты.Добавить("ТестДолжен_ПроверитьЧисло");
	ВсеТесты.Добавить("ТестДолжен_ПроверитьСтроку");
	ВсеТесты.Добавить("ТестДолжен_ПроверитьДату");
	ВсеТесты.Добавить("ТестДолжен_ПроверитьТип");
	ВсеТесты.Добавить("ТестДолжен_ПроверитьТипЗнч");
	
	Возврат ВсеТесты;
КонецФункции

Процедура ТестДолжен_ПроверитьБулево() Экспорт

	юТест.ПроверитьРавенство(Булево(0), Ложь);
	юТест.ПроверитьРавенство(Булево(1), Истина);
	юТест.ПроверитьРавенство(Булево(999), Истина);

	юТест.ПроверитьРавенство(Булево("Ложь"), Ложь);
	юТест.ПроверитьРавенство(Булево("Истина"), Истина);

	ЕстьОшибка = Ложь;
	Попытка
		юТест.ПроверитьРавенство(Булево("Это лишь слова"), Истина);
	Исключение
		ЕстьОшибка = Истина;
	КонецПопытки;
	юТест.ПроверитьИстину(ЕстьОшибка);

КонецПроцедуры

Процедура ТестДолжен_ПроверитьЧисло() Экспорт

	юТест.ПроверитьРавенство(Число("0"), 0);
	юТест.ПроверитьРавенство(Число("1"), 1);
	юТест.ПроверитьРавенство(Число("1.1"), 1.1);

	ЕстьОшибка = Ложь;
	Попытка
		юТест.ПроверитьРавенство(Число("Ложь"), 0);
	Исключение
		ЕстьОшибка = Истина;
	КонецПопытки;
	юТест.ПроверитьИстину(ЕстьОшибка);

КонецПроцедуры

